issue/update.hbs

<form {{action "saveIssue" this on="submit"}}>
	<ul>
		<li>
			<label>Title</label>
			{{input type="text" value=title}}
		</li>
		<li>
			<label>Description</label>
			{{textarea value=description}}
		</li>
		<li>
			<label>Department</label>
			{{input type="text" value=department}}
		</li>
	</ul>

	<button type="submit" {{bind-attr disabled=isNotComplete}}>Save</button>
	<button {{action "deleteIssue" this}}>Delete</button>
	{{#link-to "issues"}}Cancel{{/link-to}}
</form>


