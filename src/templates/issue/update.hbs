issue/update.hbs

<form>
	<ul>
		<li>
			<label>Title</label>
			{{input type="text" value=title}}
		</li>
		<li>
			<label>Description</label>
			{{textarea value=description}}
		</li>
		<li>
			<label>Department</label>
			{{input type="text" value=department}}
		</li>
	</ul>
	<button {{action "updateIssue" this}}>UPDATE ISSUE</button>
	<button {{action "addIssue" this}}>ADD ISSUE</button>
	<button {{action "deleteIssue" this}}>Delete</button>
	<button {{action "saveIssue" this}} {{bind-attr disabled=isNotComplete}}>Update issue</button> |
	{{#link-to "issues"}}Cancel{{/link-to}}
</form>


